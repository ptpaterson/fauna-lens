{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",

    "forceConsistentCasingInFileNames": true,

    "typeRoots": ["./node_modules/@types", "./typings"]
  },
  "exclude": ["./__tests__", "./examples", "./dist"]
}
